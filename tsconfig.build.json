{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@pixzle/core": ["packages/core/dist"],
      "@pixzle/node": ["packages/node/dist"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "test", "src/**/*.test.ts"]
}
